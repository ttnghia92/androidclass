<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/anhnho"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:src="@drawable/pokemon"
            android:layout_alignTop="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:text="Pokemon Go thu về 2 tỷ đô"
            android:layout_alignBottom="@+id/anhnho"
            />
        <TextView
            android:id="@+id/byrdie"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Byrdie"
            android:textStyle="bold"
            android:textSize="50dp"
            android:layout_toRightOf="@+id/anhnho"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="10 phút trước"
            android:layout_below="@+id/byrdie"
            android:layout_toRightOf="@+id/anhnho"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/pokemon"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Doanh thu pokenmon go"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="dantri.com.vn"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="LIKE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2sp"
            android:background="@drawable/background_button"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="COMMENT"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SHARE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2sp"/>
    </LinearLayout>
</LinearLayout>